{
  "name": "esnext-esbuild-react",
  "version": "0.1.0",
  "description": "A basic react template (yes, another one). Focus on simplicity and opinionated coding style.",
  "main": "client/app.jsx",
  "type": "module",
  "scripts": {
    "build": "run-s clean prod-bundle",
    "clean": "rm -f public/app.*",
    "prod-bundle": "esbuild --bundle --minify --target=es6 --define:process.env.NODE_ENV=\\\"production\\\" --outdir=./public client/app.jsx",
    "dev": "run-p dev-bundle dev-serve",
    "dev-bundle": "esbuild --watch --bundle --sourcemap --target=es6 --define:process.env.NODE_ENV=\\\"development\\\" --outdir=./public client/app.jsx",
    "dev-serve": "browser-sync start --server public --files public",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Seth Berrier",
  "license": "MIT",
  "repository": "github:Olliebrown/esnext-esbuild-react",
  "devDependencies": {
    "browser-sync": "^2.26.14",
    "esbuild": "^0.12.5",
    "eslint": "^7.27.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "npm-run-all": "^4.1.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
